{
    "rules": [
        {
            "supported_algorithms": {
                "elasticsearch": [
                    "https://github.com/intrahealth/similarity-scoring"
                ]
            },
            "matchingType": "deterministic",
            "fields": {
                "nid": {
                    "algorithm": "exact",
                    "fhirpath": "identifier.where(type.coding.last().code='NID_TARV').value",
                    "espath": "nid",
                    "nullHandling": "conservative"
                },
                "gender": {
                    "algorithm": "exact",
                    "fhirpath": "gender",
                    "espath": "gender",
                    "nullHandling": "conservative",
                    "nullHandlingBothFields": "greedy"
                },
                "birthDate": {
                    "algorithm": "exact",
                    "fhirpath": "birthDate",
                    "espath": "birthDate",
                    "nullHandling": "conservative",
                    "nullHandlingBothFields": "greedy"
                },
                "given": {
                    "algorithm": "exact",
                    "fhirpath": "name.where(use='official').given",
                    "espath": "given",
                    "nullHandling": "conservative",
                    "nullHandlingBothFields": "greedy"
                },
                "family": {
                    "algorithm": "exact",
                    "fhirpath": "name.where(use='official').family",
                    "espath": "family",
                    "nullHandling": "conservative",
                    "nullHandlingBothFields": "greedy"
                }
            },
            "potentialMatchThreshold": 3,
            "autoMatchThreshold": 5,
            "filters": {
                "nid": {
                    "fhirpath": "identifier.where(type.coding.last().code='NID_TARV').value",
                    "espath": "nid"
                }
            }
        },
        {
            "supported_algorithms": {
